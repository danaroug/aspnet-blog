@using Microsoft.AspNetCore.Identity
@model List<IdentityUser>

@{
    ViewData["Title"] = "User Management";
}

<h1>User Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Email Confirmed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.EmailConfirmed</td>
                <td>
                    <!-- Placeholder for future actions like Edit, Assign Roles -->
                    <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@user.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>


