@model List<WarbandOfTheSpiritborn.Areas.Admin.Controllers.UserRolesViewModel>

<h2>Users & Roles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @string.Join(", ", user.Roles)
                </td>
                <td>
                    <a asp-action="EditRoles" asp-route-userId="@user.UserId" class="btn btn-primary btn-sm">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>



