@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "User Management";
    var userRoles = (Dictionary<string, IList<string>>)ViewBag.UserRoles ?? new Dictionary<string, IList<string>>();
    var allRoles = (List<string>)ViewBag.AllRoles ?? new List<string>();
    var message = ViewBag.Message as string;
}

<h2>User Management</h2>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info">@message</div>
}

<!-- Create Role Section -->
<div class="mb-4 p-3 border rounded bg-light">
    <h4>Create New Role</h4>
    <form asp-action="CreateRole" method="post" class="d-flex align-items-center">
        <input type="text" name="roleName" class="form-control me-2" placeholder="Enter role name" required />
        <button type="submit" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create Role
        </button>
    </form>
</div>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Assign Role</th>
            <th>Remove Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var rolesToAssign = allRoles?.Except(userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : new List<string>()).ToList() ?? new List<string>();
            var rolesToRemove = userRoles.ContainsKey(user.Id) ? userRoles[user.Id].ToList() : new List<string>();

            <tr>
                <!-- User email -->
                <td>@user.Email</td>

                <!-- User roles as badges -->
                <td>
                    @foreach (var r in rolesToRemove)
                    {
                        <span class="badge bg-primary me-1">@r</span>
                    }
                </td>

                <!-- Assign Role -->
                <td>
                    <form asp-action="AssignRole" method="post" class="d-flex">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="role" class="form-select form-select-sm me-2" @(rolesToAssign.Count == 0 ? "disabled" : "")>
                            @foreach (var role in rolesToAssign)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary" @(rolesToAssign.Count == 0 ? "disabled" : "")>
                            <i class="bi bi-plus-lg"></i>
                        </button>
                    </form>
                </td>

                <!-- Remove Role -->
                <td>
                    <form asp-action="RemoveRole" method="post" class="d-flex">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="role" class="form-select form-select-sm me-2" @(rolesToRemove.Count == 0 ? "disabled" : "")>
                            @foreach (var role in rolesToRemove)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-danger" @(rolesToRemove.Count == 0 ? "disabled" : "")>
                            <i class="bi bi-dash-lg"></i>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Optional: include Bootstrap Icons CDN if not already in _Layout.cshtml -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


