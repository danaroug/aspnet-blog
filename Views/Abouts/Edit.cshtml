@model WarbandOfTheSpiritborn.Models.About

@{
    ViewData["Title"] = "Edit";
}

<div class="edit-wrapper bg-light rounded-lg p-2 mt-4">
    <h1>About Content</h1>

    <div class="container-fluid">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AboutTitle" class="control-label">Post Title </label>
                <input asp-for="AboutTitle" class="form-control" />
                <span asp-validation-for="AboutTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AboutText" class="control-label">Paragraph</label>
                <textarea asp-for="AboutText" class="form-control" rows="10"></textarea>
                <span asp-validation-for="AboutText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to About Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
