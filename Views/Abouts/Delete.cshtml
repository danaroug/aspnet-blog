@model WarbandOfTheSpiritborn.Models.About

@{
    ViewData["Title"] = "Delete";
}

<article class="about">
    <h3>Are you sure you want to delete this about post?</h3>
    <div class="container">
        <dl class="row">
            <dd class="col-sm-10">
                <h4>
                    @Html.DisplayFor(model => model.AboutTitle)
                </h4>
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AboutText)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to Blog</a>
        </form>
    </div>
</article>
