@model WarbandOfTheSpiritborn.Models.About

@{
    ViewData["Title"] = "Create";
}


    <div class="container">
        <h1>About Content</h1>
    </div>
    <div class="container-fluid">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AboutTitle" class="control-label">Post Title </label>
                <input asp-for="AboutTitle" class="form-control" />
                <span asp-validation-for="AboutTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AboutText" class="control-label">Paragraph</label>
                <textarea asp-for="AboutText" class="form-control" rows="10"></textarea>
                <span asp-validation-for="AboutText" class="text-danger"></span>
            </div>
        </form>
        <div class="form-group mb-3">
            <input type="submit" value="Create" class="btn btn-primary"/>
            <a asp-action="Index">Back to About</a>
        </div>
    </div>


