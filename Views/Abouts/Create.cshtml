@model WarbandOfTheSpiritborn.Models.About

@{
    ViewData["Title"] = "Create";
}

<div class="main-container">

    <div class="container">
        <h1>About Content</h1>
    </div>

    <div class="container-fluid">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AboutTitle" class="control-label pb-2">Title</label>
                <input asp-for="AboutTitle" class="form-control" />
                <span asp-validation-for="AboutTitle" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                        <textarea asp-for="AboutText" class="form-control" rows="10"></textarea>
                        <span asp-validation-for="AboutText" class="text-danger"></span>
                        <div class="form-group mb-3">
                            <br />
                            <input type="submit" value="Create" class="btn btn-primary btn-dark" />
                            <a asp-action="Index">Back</a>
                        </div>
                    </div>
</form>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
