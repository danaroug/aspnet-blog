@model WarbandOfTheSpiritborn.Models.Blog

@{
    ViewData["Title"] = "Delete";
}
<article class="blog-posts">
    <h3>Are you sure you want to delete this Blog Post?</h3>
    <div class="container">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BlogName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BlogName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BlogPost)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BlogPost)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BlogAuthor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BlogAuthor)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to Blog</a>
        </form>
    </div>
</article>