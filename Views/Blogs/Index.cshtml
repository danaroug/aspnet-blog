@model IEnumerable<WarbandOfTheSpiritborn.Models.Blog>

@{
    ViewData["Title"] = "Index";
}


    <div class="container">
        <h1>Welcome to our Blog</h1>
        <p>
            <a asp-action="Create">Create New Post</a>
        </p>
        <hr />
    </div>
    <div class="container-fluid">
        @foreach (var item in Model)
        {
            <h2>
                @Html.DisplayFor(modelItem => item.BlogName)
            </h2>
            <p>
                @Html.DisplayFor(modelItem => item.BlogPost)
            </p>
            <p>
                Author:
                @Html.DisplayFor(modelItem => item.BlogAuthor)
            </p>
            <p>
                Posted:
                @Html.DisplayFor(modelItem => item.ArticleDate)
            </p>
            <p>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </p>
            <hr />
        }
    </div>

