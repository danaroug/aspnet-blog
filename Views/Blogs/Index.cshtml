@model IEnumerable<WarbandOfTheSpiritborn.Models.Blog> //A list of blogs 

@{
    ViewData["Title"] = "Index";
}



<article class="blog-posts">
    <h1>Blog</h1>

    <p>
        <a asp-action="Create">Create New Blog Post</a>
    </p>
    <hr />
    <div class="container-fluid">
        @foreach (var item in Model)
        {

            <h2>
                @Html.DisplayFor(modelItem => item.BlogName)
            </h2>
            <p>
                @Html.DisplayFor(modelItem => item.BlogPost)
            </p>
            <p>
                Author:
                @Html.DisplayFor(modelItem => item.BlogAuthor)
                
            </p>
            <p>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </p>
            <hr />
            
        }
    </div>
</article>
